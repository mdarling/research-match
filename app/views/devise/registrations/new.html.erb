<% breadcrumb :new_user_signup %>
<% userType = request.path %>
<% if userType == "/admins/sign_up" %>
	<% if admin_signed_in? %>
	<% else %>
	<script type="text/javascript">
    window.location.href="/home/index.html" 
  </script>
	<% end %>
<% end %>
<div id="sign_upTable">
<div id="sign_upWrap">
<% if userType == "/research_users/sign_up" || userType == "/research_users" %>
	<h1>Researcher Sign Up</h1>
<% else %>
	<h1>Student Sign Up </h1>
<% end %>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<div id="sign_upLeft" >
	<% if userType == "/research_users/sign_up" || userType == "/research_users" %>
		<div><%= f.label "First Name" %><br />
  	<%= f.text_field :first_name %></div>
   
  	<div><%= f.label "Last Name" %><br />
  	<%= f.text_field :last_name %></div>
 	<% end %>
  
  <div><%= f.label :email %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

</div>

<div id="sign_upRight" >

	<h1>Already Have an Acccount?</h1>


	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		<div style="background-color:white;	"><%= f.label :email %><br />
		<%= f.email_field :email %></div>

		<div style=""><%= f.label :password %><br />
		<%= f.password_field :password %></div>

		<% if devise_mapping.rememberable? -%>
		  <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
		<% end -%>

		<div><%= f.submit "Sign in" %></div>
	<% end %>
	<%= render "devise/shared/links" %>
</div>
</div>
</div>
