<fieldset>
  <div id = "wrap">  
        <h5><span style="font-size:15px;color:#b80030">*</span>What type of students will you require for this 
      position? (Check all that apply).</h5><br>
    <div class="field">
      <%= f.check_box :is_undergrad, {}, '1', '0' %>
      <%= f.label "Undergraduate" %>
      <b>|</b>
      <%= f.check_box :is_grad, {}, '1', '0' %>
      <%= f.label "Graduate"%>
      <b>|</b>
      <%= f.check_box :is_postdoc, {}, '1', '0' %>
      <%= f.label "Postdoc"%>
      <b>|</b>
      <%= f.check_box :is_highschool, {}, '1', '0' %>
      <%= f.label "Highschool" %>
    </div>

    <div class="field">
      <span style="font-size:15px;color:#b80030">*</span><%= f.label "Preferred Major"%><br>
      <% if @positions != nil %>
        <%= f.select :major,  options_from_collection_for_select(@departments, "name", "name", @positions[@positions_index].major ), :style => 
        "width:100px;", :include_blank => "Select Department" , :selected => nil %>
      <% else %>
        <%= f.select :major,  options_from_collection_for_select(@departments, "name", "name"), :style => 
        "width:100px;", :include_blank => "Select Department" , :selected => nil %>
      <% end %>
    </div>
  <div id="main">

    <div class="field">
      <%= f.label "Description of Position" %><br>
      <%= f.text_area :description, :class => 'textArea' %>
    </div>
    <div class="field">
      Minimum required GPA<%= f.label " " %><br>
      <%= f.text_field :gpa, :class => 'textField' %>
    </div>
      <div class="field">
      Work Period<%= f.label " " %><br>
      <%= f.text_field :work_period, :class => 'textField' %>
    </div>
    <div class="field">
      <%= f.label "Will this position provide compensation?" %><br>
      <%= f.text_field :payment, :class => 'textField' %>
    </div>
       <%= f.hidden_field :_destroy %>
       <%= link_to "Remove this Position", '#', class: "remove_fields" %>
  </div><!-- End Main div -->
  <div id="sidebar">

    <div class="field">
      <%= f.label "Additional skills" %><br>
      <%= f.text_area :skills, :class => 'textArea' %>
    </div>
    <div class="field">
      <% if @positions != nil %>
      <span style="font-size:15px;color:#b80030">*</span><%= f.label "Preferred standing for undergraduates" %><br>
        <%= f.select :standing, options_for_select([["Select One", ""], "Freshman", "Sophomore", "Junior", "Senior"], @positions[@positions_index].standing) %>
        <% @positions_index = @positions_index + 1 %>
      <% else %>
        <span style="font-size:15px;color:#b80030">*</span><%= f.label "Preferred standing for undergraduates" %><br>
        <%= f.select :standing, options_for_select([["Select One", ""], "Freshman", "Sophomore", "Junior", "Senior"]) %>
      <% end%>
      <div class="field">
      <span style="font-size:15px;color:#b80030">*</span><%= f.label "When should this position be posted?" %><br>
      <%= f.date_select :record_begin %>
    </div>
    <div class="field">
     <span style="font-size:15px;color:#b80030">*</span> <%= f.label "What is the deadline for this position?" %><br>
      <%= f.date_select :record_end %>
    </div>  

    </div><!-- end sidebar div -->
  </div><!-- end wrap div -->

</fieldset>
